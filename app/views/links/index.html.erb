<div class="row links">

  <h1>Listing Links</h1>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Tittle</th>
        <th>Url</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @links.each do |link| %>
        <tr>
          <td><span><%= link.tittle %></span></td>
          <td><span><%= link.url %></span></td>
          <% if link.user == current_user %>
            <td><%= link_to 'Show', link, class: "btn btn-flat btn-primary" %></td>
            <td><%= link_to 'Edit', edit_link_path(link), class: "btn btn-flat btn-primary" %></td>
            <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-flat btn-danger" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to new_link_path, class: "btn btn-flat btn-success" do %>
    <i class="fa fa-plus"></i>&nbsp; New Link
  <% end %>
</div>
